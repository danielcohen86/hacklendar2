<style>
	th {
		text-align: left
	}
</style>

<div class="page-header">
<h1>DC Hacklender</h1>
</div>

<table class="table">
<tr>
<th>Title</th>
<th>Description</th>
<th>Mood</th>
</tr>
<% @diary_entries.each do |d| %>
  <tr>
  <td> <%= d.title %> </td>
  <td> <%= d.description %> </td>
  <td> <%= d.mood %> </td>
  <td><%= link_to 'Show', d %></td>
  <td><%= link_to 'Edit', edit_diary_entry_path(d) %></td>
  <td><%= link_to 'Delete', d, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<%= link_to "Add new entry", new_diary_entry_path, class: "btn-large btn-primary" %>
